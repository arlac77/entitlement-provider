{
  "name": "entitlement-provider",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "module": "src/entitlement-provider.mjs",
  "description": "provide entitlements via OIDC",
  "keywords": [
    "OIDC",
    "kronos-integration",
    "systemd"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "entitlement-provider": "src/entitlement-provider-cli.mjs",
    "entitlement-provider-systemd": "src/entitlement-provider-systemd-cli.mjs"
  },
  "scripts": {
    "test": "ava --timeout 2m",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp"
  },
  "dependencies": {
    "@kronos-integration/interceptor-decode-json": "2.1.8",
    "@kronos-integration/service": "^8.3.26",
    "@kronos-integration/service-admin": "^3.0.22",
    "@kronos-integration/service-authenticator": "^1.0.24",
    "@kronos-integration/service-health-check": "^5.0.22",
    "@kronos-integration/service-http": "^10.1.2",
    "@kronos-integration/service-ldap": "^2.1.24",
    "oidc-provider": "6.24.0"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "ava": "^3.8.1",
    "c8": "^7.1.0",
    "documentation": "^12.3.0",
    "got": "11.1.1",
    "npm-pkgbuild": "^6.11.18",
    "rollup": "2.7.6",
    "semantic-release": "^17.0.7"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^2.3.2"
  },
  "engines": {
    "node": ">=14.2.0"
  },
  "os": [
    "linux",
    "darwin"
  ],
  "cpu": [
    "arm",
    "arm64",
    "x64"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/entitlement-provider.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/entitlement-provider/issues"
  },
  "homepage": "https://github.com/arlac77/entitlement-provider#readme",
  "config": {
    "base": "/services/entitlements/api",
    "socket": "/run/${name}/http/socket"
  },
  "systemd": {
    "units": {
      "${name}": "systemd/${name}*"
    }
  },
  "pacman": {
    "arch": [
      "aarch64",
      "armv7h",
      "x86_64"
    ],
    "backup": "etc/${name}/config.json",
    "content": {
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf",
      "/etc/${name}/config.json": "config/config.json",
      "/etc/nginx/config.d/${name}.conf": "pacman/nginx.conf",
      "/srv/http/.well-known/openid-configuration": "config/openid-configuration",
      "/usr/lib/sysusers.d/${name}.conf": "pacman/sysusers.conf"
    },
    "depends": {
      "systemd": ">=244.1",
      "nginx-mainline": ">=1.17.7"
    },
    "groups": "user admin",
    "hooks": "pacman/hooks.sh",
    "installdir": "/services/${name}",
    "group": "services",
    "content-provider": {
      "systemd": {
        "units": {
          "${name}": "systemd/${name}*"
        }
      }
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} --npm-dist --npm-modules pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-kronos-app",
      "arlac77/template-github"
    ]
  }
}
