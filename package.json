{
  "name": "entitlement-provider",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "module": "src/entitlement-provider.mjs",
  "description": "provide entitlements via OIDC",
  "keywords": [
    "OIDC"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "entitlement-provider": "bin/entitlement-provider",
    "entitlement-provider-systemd": "bin/entitlement-provider-systemd"
  },
  "scripts": {
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme src/entitlement-provider.mjs --section=API",
    "lint": "documentation lint src/entitlement-provider.mjs",
    "posttest": "npm run prepare && markdown-doctest",
    "prepare": "rollup -c",
    "test": "ava"
  },
  "dependencies": {
    "@kronos-integration/service": "^8.0.4",
    "@kronos-integration/service-admin": "^3.0.4",
    "@kronos-integration/service-authenticator": "^1.0.5",
    "@kronos-integration/service-health-check": "^5.0.0",
    "@kronos-integration/service-http": "^8.0.2",
    "@kronos-integration/service-ldap": "^2.1.3",
    "commander": "^4.0.1",
    "oidc-provider": "^6.17.1"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^4.0.0",
    "@rollup/plugin-node-resolve": "^6.0.0",
    "@semantic-release/exec": "^3.3.8",
    "ava": "^2.4.0",
    "builtin-modules": "^3.1.0",
    "c8": "^6.0.1",
    "documentation": "^12.1.4",
    "esm": "^3.2.25",
    "got": "^10.0.1",
    "markdown-doctest": "^1.0.0",
    "npm-pkgbuild": "^6.10.14",
    "rollup": "^1.27.8",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-executable": "^1.5.1",
    "rollup-plugin-native": "^1.1.0",
    "semantic-release": "^15.13.31"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^2.1.5"
  },
  "engines": {
    "node": ">=12.13.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/entitlement-provider.git"
  },
  "files": [
    "bin"
  ],
  "bugs": {
    "url": "https://github.com/arlac77/entitlement-provider/issues"
  },
  "homepage": "https://github.com/arlac77/entitlement-provider#readme",
  "config": {
    "base": "/services/entitlements/api",
    "socket": "/run/${name}/socket"
  },
  "systemd": {
    "units": {
      "${name}": "systemd/${name}*"
    }
  },
  "pacman": {
    "arch": [
      "aarch64",
      "armv7h",
      "x86_64"
    ],
    "groups": "user admin",
    "hooks": "pacman/hooks.sh",
    "backup": "etc/${name}/config.json",
    "depends": {
      "systemd": ">=244"
    },
    "installdir": "/services/${name}",
    "additional-content": [
      "npm-dist",
      "npm-dependencies"
    ],
    "content": {
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf",
      "/etc/${name}/config.json": "config/config.json",
      "/etc/nginx/config.d/${name}.conf": "pacman/nginx.conf",
      "/srv/http/.well-known/openid-configuration": "config/openid-configuration"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} --npm-dist --npm-modules pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "ava": {
    "require": [
      "esm"
    ],
    "extensions": [
      "mjs"
    ],
    "babel": false,
    "compileEnhancements": false,
    "files": [
      "tests/*-test.mjs"
    ]
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template.git"
    }
  }
}
