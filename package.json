{
  "name": "entitlement-provider",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public",
    "provenance": false
  },
  "description": "provide entitlements via OIDC",
  "keywords": [
    "OIDC",
    "kronos-integration",
    "systemd"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "entitlement-provider": "src/entitlement-provider-cli.mjs"
  },
  "scripts": {
    "test": "node --run test:ava",
    "test:ava": "ava --timeout 4m tests/*-ava.mjs tests/*-ava-node.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp"
  },
  "dependencies": {
    "@kronos-integration/interceptor-decode-json": "^3.0.24",
    "@kronos-integration/service": "^14.0.6",
    "@kronos-integration/service-admin": "^4.0.3",
    "@kronos-integration/service-authenticator": "^4.0.2",
    "@kronos-integration/service-health": "^8.0.5",
    "@kronos-integration/service-http": "^14.0.5",
    "@kronos-integration/service-ldap": "^6.0.7"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/exec": "^7.0.3",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "ava": "^6.4.1",
    "c8": "^10.1.3",
    "got": "^14.6.5",
    "mf-hosting": "^2.9.5",
    "npm-pkgbuild": "^19.0.7",
    "semantic-release": "^25.0.2"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^4.0.0"
  },
  "engines": {
    "node": ">=24.8.0"
  },
  "os": [
    "linux",
    "darwin"
  ],
  "cpu": [
    "arm",
    "arm64",
    "x64"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arlac77/entitlement-provider.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/entitlement-provider/issues"
  },
  "homepage": "https://github.com/arlac77/entitlement-provider#readme",
  "pkgbuild": {
    "content": {
      "${install.dir}": {
        "type": "npm-pack"
      },
      "${install.dir}/node_modules": {
        "type": "node-modules"
      },
      "${systemd.unit.dir}${name}.service": "pkg/${name}.service",
      "${config.dir}config.json": "config/config.json",
      "${well-known.content.dir}openid-configuration": "config/openid-configuration"
    },
    "http.path": "${install.base.dir}entitlements/api",
    "kronos": true
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --publish dist"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "any Debian Package"
            },
            {
              "path": "dist/*any.pkg.*",
              "label": "any Arch Linux Package"
            },
            {
              "path": "dist/*x86_64.pkg.*",
              "label": "x86_64 Arch Linux Package"
            },
            {
              "path": "dist/*aarch64.pkg.*",
              "label": "arm64 Arch Linux Package"
            },
            {
              "path": "dist/*noarch.rpm",
              "label": "noarch RPM"
            },
            {
              "path": "dist/*x86_64.rpm",
              "label": "x86_64 RPM"
            },
            {
              "path": "dist/*aarch64.rpm",
              "label": "arm64 RPM"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-kronos-app",
      "arlac77/template-npm-pkgbuild"
    ]
  },
  "packageManager": "npm@11.6.3+sha512.4085a763162e0e3acd19a4e9d23ad3aa0978e501ccf947dd7233c12a689ae0bb0190763c4ef12366990056b34eec438903ffed38fde4fbd722a17c2a7407ee92"
}
