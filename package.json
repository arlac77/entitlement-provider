{
  "name": "entitlement-provider",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "module": "src/entitlement-provider-cli.mjs",
  "description": "provide entitlements via OIDC",
  "keywords": [
    "OIDC"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "entitlement-provider": "bin/entitlement-provider"
  },
  "scripts": {
    "cover": "c8 -x 'tests/**/*.mjs' --temp-directory build/tmp ava && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme src/entitlement-provider-cli.mjs --section=API",
    "lint": "documentation lint src/entitlement-provider-cli.mjs",
    "posttest": "npm run prepare && markdown-doctest",
    "prepare": "rollup -c",
    "test": "ava"
  },
  "dependencies": {
    "commander": "^3.0.2",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.8.1",
    "koa-ejs": "^4.2.0",
    "koa-helmet": "^5.1.0",
    "koa-mount": "^4.0.0",
    "ldapts": "^1.10.0",
    "oidc-provider": "^6.9.0",
    "remove-sensible-values": "^1.0.2"
  },
  "devDependencies": {
    "@semantic-release/exec": "^3.3.7",
    "ava": "^2.4.0",
    "builtin-modules": "^3.1.0",
    "c8": "^5.0.4",
    "config-expander": "^11.0.5",
    "documentation": "^12.1.2",
    "esm": "^3.2.25",
    "markdown-doctest": "^0.9.1",
    "npm-pkgbuild": "^6.10.1",
    "rollup": "^1.21.4",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-executable": "^1.5.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "semantic-release": "^15.13.24"
  },
  "optionalDependencies": {
    "sd-daemon": "^1.0.1"
  },
  "engines": {
    "node": ">=12.10.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/entitlement-provider.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/entitlement-provider/issues"
  },
  "homepage": "https://github.com/arlac77/entitlement-provider#readme",
  "config": {
    "urlPrefix": "/services/entitlements/api",
    "socket": "/run/${name}/socket"
  },
  "systemd": {
    "units": {
      "${name}": "systemd/${name}*"
    }
  },
  "pacman": {
    "groups": "user admin",
    "hooks": "pacman/install.sh",
    "backup": "etc/${name}/config.json",
    "depends": {
      "systemd": ">=243.0"
    },
    "installdir": "/services/${name}",
    "content": {
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf",
      "/etc/${name}/config.json": "config/config.json",
      "/etc/nginx/config.d/${name}.conf": "pacman/nginx.conf"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} --npm-dist --npm-modules pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "ava": {
    "require": [
      "esm"
    ],
    "extensions": [
      "mjs"
    ],
    "babel": false,
    "compileEnhancements": false,
    "files": [
      "tests/*-test.mjs"
    ]
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template.git"
    }
  }
}
